
<div class= "container">
<% if user_signed_in? %>
    <div class="row">
    <% @recipes.each do |recipe| %>
    <div class="col-md-4">
    <div class="recipe-box">
    <% if recipe.image? %>  
      <%= link_to (image_tag recipe.image.url, class: "recipe-index"), recipe %>
      <% end %> 
      <ul>
        <l1><%= link_to recipe.name, recipe %></l1>
        <li><%= recipe.description %></li>
        <li><%= button_to 'Delete', recipe, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></li>
      </ul>
    </div>  
  </div>
  <% end %>
  </div>
 
<br>

<%= link_to 'New Recipe', new_recipe_path, class: "btn btn-secondary" %>
<% else %>
<h1>Welcome To The Moonshiner's Cookbook!</h1>
Sign up and post your recipes!
<% end %>