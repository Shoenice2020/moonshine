

<% if user_signed_in? %>



<table class="table table-striped table-bordered table-hover">

  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= link_to recipe.name, recipe %>
        <td><%= recipe.name %></td>
        <td><%= recipe.description %></td>
        <td><%= button_to 'Delete', recipe, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_recipe_path, class: "btn btn-secondary" %>
<% else %>
<h1>Welcome To The Moonshiner's Cookbook!</h1>
Sign up and post your recipes!
<% end %>